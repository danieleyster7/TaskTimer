<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="400.0" prefWidth="300.0" styleClass="background" stylesheets="@../view/DarkTheme.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="deyster.timer.dialog.NewNoteController">
   <children>
      <TextArea fx:id="noteText" prefHeight="200.0" prefWidth="200.0" promptText="Enter Note Text Here..." AnchorPane.bottomAnchor="105.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" />
      <GridPane AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="300.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Time:" />
            <TextField fx:id="timeField" GridPane.columnIndex="1" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </GridPane>
      <HBox spacing="16.67" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="350.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleOk" prefHeight="40.0" prefWidth="125.0" text="Save Note" />
            <Button mnemonicParsing="false" onAction="#handleClose" prefHeight="40.0" prefWidth="125.0" text="Cancel" />
         </children>
         <padding>
            <Insets bottom="5.0" left="16.67" right="16.67" top="5.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
